<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="45dip"
	    android:background="@drawable/tenpay_top_bar" >

        <TextView
            android:id="@+id/tv_alarm_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="报警详情" />

      
        <LinearLayout
            android:id="@+id/ll_alarm_detail_talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="right|center_vertical"
            android:paddingRight="10dp" >
            <ImageView
	            android:id="@+id/iv_alarm_detail_talk"
	            android:layout_gravity="center"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@mipmap/icon_talk"
	             />
            <TextView
                android:id="@+id/tv_alarm_detail_talk"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:textColor="@color/white"
	            android:textSize="12sp"
	            android:text="语音对讲" />
        </LinearLayout>

    </FrameLayout>
    
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	         >
	
			<ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
			
	        <FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="20dp"
	                android:textSize="17sp"
	                android:text="报警名称" />
	
	            <TextView
	                android:id="@+id/tv_alarm_detail_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:paddingRight="20dp"
	                android:textSize="17sp"
	                android:textColor="@color/text_hint_gray"
	                android:text="运动侦测" />
	
	        </FrameLayout>
	
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
	        
	        <FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="20dp"
	                android:textSize="17sp"
	                android:text="事件类型" />
	
	            <TextView
	                android:id="@+id/tv_alarm_detail_event_type"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:paddingRight="20dp"
	                android:textSize="17sp"
	                android:textColor="@color/text_hint_gray"
	                android:text="报警器报警" />
	
	        </FrameLayout>
	        
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
	        
	        <FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp" >
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="20dp"
	                android:textSize="17sp"
	                android:text="警报时间" />
	
	            <TextView
	                android:id="@+id/tv_alarm_detail_event_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:paddingRight="20dp"
	                android:textSize="17sp"
	                android:textColor="@color/text_hint_gray"
	                android:text="2014-9-1 13:51:10" />
	
	        </FrameLayout>
	        
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:layout_gravity="center_vertical" >
	            
	            <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingLeft="20dp"
		            android:paddingRight="20dp"
		            android:layout_gravity="center_vertical"
	                android:textSize="17sp"
		            android:text="报警抓图" />
	
	            <HorizontalScrollView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
	
	                <LinearLayout
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:orientation="horizontal"
	                    android:id="@+id/ll_alarm_detail_pictures" >
	                    
	                </LinearLayout>
	            </HorizontalScrollView>
	            
	        </LinearLayout>
	        
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
	        
	        <FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:id="@+id/fl_alarm_detail_preview" >
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:textSize="17sp"
	                android:text="视频预览"
	                android:drawableRight="@mipmap/qz_icon_forward_normal" />
	
	        </FrameLayout>
	        
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
	        
	        <FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:id="@+id/fl_alarm_detail_playback" >
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:textSize="17sp"
	                android:text="录像回看"
	                android:drawableRight="@mipmap/qz_icon_forward_normal" />
	
	        </FrameLayout>
	        
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
	        
	        <FrameLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            android:id="@+id/fl_alarm_detail_handle_alarm" >
	
	            <TextView
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:paddingLeft="20dp"
	                android:paddingRight="20dp"
	                android:textSize="17sp"
	                android:text="处理报警"
	                android:drawableRight="@mipmap/qz_icon_forward_normal" />
	
	        </FrameLayout>
	        
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:scaleType="fitXY"
	            android:src="@mipmap/divide_heng" />
	    </LinearLayout>
	</ScrollView>
</LinearLayout>
