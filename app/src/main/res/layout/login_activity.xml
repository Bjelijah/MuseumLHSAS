<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@drawable/tenpay_top_bar" >

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:orientation="vertical"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_login_account"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:background="@mipmap/inputlayout_bg"
                android:hint="@string/login_account"
                android:textColorHint="@color/text_hint_gray"
                android:layout_weight="1">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dip" >

            <EditText
                android:id="@+id/et_login_password"
                android:inputType="textPassword"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:hint="@string/login_password"
                android:textColorHint="@color/text_hint_gray"
                android:background="@mipmap/inputlayout_bg"
                android:layout_weight="1">
            </EditText>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dip" >

            <EditText
                android:id="@+id/et_login_webserviceip"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:hint="@string/login_webservice_ip"
                android:textColorHint="@color/text_hint_gray"
                android:background="@mipmap/inputlayout_bg"
                android:layout_weight="1">
            </EditText>

        </LinearLayout>
        
        <!-- 语音对讲 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/et_login_talkip"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:hint="@string/login_talk_ip"
                android:textColorHint="@color/text_hint_gray"
                android:background="@drawable/inputlayout_bg"
                android:layout_weight="1">
            </EditText>

        </LinearLayout>
        -->
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:gravity="center" 
            android:layout_marginTop="50dip" 
            android:layout_marginLeft="20dip" 
            android:layout_marginRight="20dip">

	        <Button 
	            android:id="@+id/btn_login" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:background="@drawable/btn_login_selector" 
	            android:text="@string/login" />

    	</LinearLayout>

        <Button
            android:id="@+id/button1_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>
</LinearLayout>
